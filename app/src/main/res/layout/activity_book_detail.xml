<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tolean.ibook.view.BookDetailActivity">
    <!--网络错误时显示-->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/layout_wait"
        android:fitsSystemWindows="true"
        android:visibility="invisible"
        style="@style/MatchMatch">
        <android.support.v7.widget.Toolbar
            android:id="@+id/wait_toolbar"
            style="@style/normal_toolbar"/>
        <include layout="@layout/view_error_layout"/>
    </android.support.design.widget.CoordinatorLayout>
    <!--网络正常时显示-->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/layout_detail"
        android:fitsSystemWindows="true"
        style="@style/MatchMatch">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/detail_appbarlayout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="280dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/coll_toolbar_detail"
                android:fitsSystemWindows="true"
                app:titleEnabled="false"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                style="@style/MatchMatch">
                <ImageView
                    android:transitionName="sharedView"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitXY"
                    android:id="@+id/bookimage_detail"
                    android:layout_gravity="center"
                    app:layout_collapseMode="parallax"
                    android:layout_width="124dp"
                    android:layout_height="201dp"/>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_detail"
                    app:layout_collapseMode="pin"
                    app:titleTextColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">
                    <ImageView
                        android:id="@+id/collect"
                        style="@style/WrapWrap"
                        android:src="@android:drawable/btn_star_big_on"
                        android:layout_gravity="end"
                        android:paddingRight="10dp"
                        />
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            style="@style/MatchMatch">

            <LinearLayout
                android:orientation="vertical"
                style="@style/MatchMatch">
                <RelativeLayout
                    style="@style/MatchMatch"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/detail_title"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/detail_author"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:text="作者:"/>
                        <TextView
                            android:id="@+id/detail_publisher"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="出版社:"/>
                        <TextView
                            android:id="@+id/detail_publish_time"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="出版时间:"/>
                        <TextView
                            android:id="@+id/detail_page_and_price"
                            android:paddingLeft="5dp"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <android.support.v7.widget.CardView

                        android:id="@+id/detail_rating_card"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/detail_rating_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                />
                            <RatingBar
                                android:id="@+id/detail_rating"
                                style="@style/RatingBarStyle"
                                />
                            <TextView
                                android:layout_gravity="center_horizontal"
                                android:id="@+id/detail_number_raters"
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_tagflowlayout"
                    app:max_select="-1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                </com.zhy.view.flowlayout.TagFlowLayout>
                <include layout="@layout/book_detail_author"/>
                <include layout="@layout/book_detail_catalog"/>
                <include layout="@layout/book_detail_summary"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
