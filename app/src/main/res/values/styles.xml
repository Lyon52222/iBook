<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MyTheme">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--所有风格控件放在这里统一管理-->
    <style name="normal_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="introduction_and_instruction_text_style" parent="MatchMatch">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="search_bar_open_nav" parent="WrapWrap">
        <item name="android:src">@drawable/icon_open_nav</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="search_bar_input" parent="@style/MatchWrap">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/search_etext_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:hint">@string/search_edittext_hint</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>
    <style name="search_bar_scan_btn">
        <item name="android:src">@drawable/scan_icon</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>
    <style name="BackToTopFAB" parent="WrapWrap">
        <item name="android:src">@drawable/ic_back_to_top</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>
    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>
    <style name="PageLoading">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:indeterminateDrawable">@drawable/page_progress_loading_</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>

    <style name="PageLoadingHint" parent="@style/WrapWrap">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:lines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/error_view_loading</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="detail_content_title" parent="MatchWrap">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_light_gray</item>
    </style>
    <style name="detail_content_text" parent="MatchWrap">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="BookDetailShowMore" parent="@style/WrapWrap">
        <item name="android:visibility">gone</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="BookDetailShrink" parent="@style/WrapWrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:text">@string/get_more</item>
    </style>

    <style name="BookDetailSpreadImage" parent="@style/WrapWrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/ic_details_more</item>
    </style>

    <style name="BookDetailShrinkImage" parent="@style/WrapWrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/ic_shrink_up</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="SearchTitleClearView" parent="@style/WrapWrap">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:src">@drawable/search_clear</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="SearchTitleSearchView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:src">@drawable/search_icon_transparent</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="SearchTitleEditView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/toolbar_search_text_size</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/text_color_light_gray</item>
        <item name="android:hint">@string/input_key_word</item>
    </style>
</resources>
